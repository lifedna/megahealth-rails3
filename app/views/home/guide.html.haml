:javascript
  $(document).ready(function(){
    // $('input[id=content_filter_interests]').focus();

    $('span a').click(function(){
      var str = $('input[id=content_filter_interests]').val();
    
      if(str.length == 0){
        var issues = [];
      } else {
        str = str.replace(/，|、/g, ', ')
        issues = str.split(', ');
      }
        
      issues.push($(this).text());

      var uniqueIssues = [];      
      $.each(issues, function(i, el){
       if($.inArray(el, uniqueIssues) === -1) uniqueIssues.push(el);
      });

      $('input[id=content_filter_interests]').val(uniqueIssues.join(', ')) ;
      $('input[id=content_filter_interests]').focus();
    });
  });  
