      .cell.forum
        %table.horizontal-border
          %tr
            %th.size3of8 话题
            %th.size2of8 作者
            %th.size1of8 回应
            %th.size2of8 更新时间
          - @forum.topics.each do |t|
            %tr 
              %td #{link_to t.title, show_community_topic_url(t.community, t)}
              %td #{t.user.name}
              %td #{t.posts_count}
              / %td #{time_ago_in_words(t.created_at).capitalize}前
              %td #{t.created_at.strftime("%Y-%m-%d %H:%M:%S")} 

