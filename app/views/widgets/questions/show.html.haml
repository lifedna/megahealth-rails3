/ Page
.site-center
  .header-info{:style => "background:#398fd1; color:#fff"}
    .col.sizefit.padding-l30.padding-r30
      .doc-image.margin-t20
        .p240-box
          %a{:href => "#"}
            %img{:src => "#{asset_path 'doctors/126708301394155.jpg'}" }

    .col.sizefill
      .doc-community-info.margin-t20
        %h3 #{@community.name} 
 
        %p 
          四川成都华西医院 儿科 主任医师 副教授
        
      .doc-expertise.padding-r20
        %p
          #{@community.brief}
      .col       
        .col.size1of2
          .doc-share.margin-t20
            %p 如果觉得对你的家人、朋友有帮助，分享给TA吧
        .col.sizefill
          .button.background-green.large-button.center 
            %span 加入

  .margin-t20
    = render :partial => "shared/section_list", :locals => {:sections => @sections, :current_section => @current_section}

  .col.size2of3.margin-t20
    .float-right
      #{link_to "> #{@question.qa.name}", show_community_qa_url(@question.community, @question.qa)}
    .col
      %h3 #{@question.title}  
      %small #{@question.user.name} &middot; #{time_ago_in_words(@question.created_at).capitalize}前提问
      .body.margin-t20
        #{@question.body}

      #answers
        - @question.answers.each do |a|
          #{a.content} &middot; #{a.user.name}

    - if user_signed_in?        
      %p
        = form_tag answer_community_question_path(@community, @question), :method => :get do
          %p
            = label_tag "你的回答"
          %p  
            = text_area_tag :answer, '', :size => "60x6" 
          %p
            = submit_tag '加上去'    


  .col.size1of3.margin-t20
    .margin-l20
      = render :partial => "shared/content_sidebar"          

