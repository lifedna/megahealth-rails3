      %hr
      %ul
        - @video.comments.each do |c|
          - if c.persisted?
            %li
              #{c.body}  

      - if user_signed_in?        
        %p
          = form_tag comment_community_video_url(@community, @video), :method => :get do
            %p
              = label_tag "你的回应"
            %p  
              = text_area_tag :comment, '', :size => "60x6" 
            %p
              = submit_tag '加上去'  

