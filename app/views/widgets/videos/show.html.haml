    .col
      %h3 #{@video.title}
      %p
        %iframe{:width=>500, :height=>400, :src=>@video.src, :frameborder=>0} 
      %p #{@video.url}
      %p #{@video.created_at.strftime("%Y-%m-%d %H:%M:%S")}上传
