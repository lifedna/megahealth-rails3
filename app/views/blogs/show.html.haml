- @healthportal = "active"

/ Page
.site-center.center-page  
  .col.size2of3  
    %h2 #{@blog.title}
    %small 
      #{@blog.created_at.strftime("%Y-%m-%d %H:%M:%S")} #{@blog.category}
    %p #{raw @blog.body}
    %p #{@blog.tags}
    %hr
    %ul
      - @blog.comments.each do |comment|
        - if comment.persisted?
          %li
            #{comment.body}
    - if user_signed_in?        
      %p
        = form_tag comment_blog_path(@blog), :method => :get do
          %p
            = label_tag "你的回应"
          %p  
            = text_area_tag :comment, '', :size => "60x6" 
          %p
            = submit_tag '加上去'  

  .col.size1of3
    .margin-l30.margin-t20
      %h3{:style => "text-align:right"} 我的日记   
      .my-list.margin-t20
        %ul.unstyled
          - @blogs.excludes(:id => @blog.id).each do |blog|
            %li{:style => "text-align:right;"} #{link_to blog.title, blog_path(blog)}           