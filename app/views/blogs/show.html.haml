%h3 #{@blog.title}
%small 
  #{time_ago_in_words(@blog.created_at).capitalize}前 #{@blog.category}
%p #{@blog.body}
%p #{@blog.tags}
%hr
%ul
  - @blog.comments.each do |comment|
    - if comment.persisted?
      %li
        #{comment.body}
- if user_signed_in?        
  %p
    = form_tag comment_blog_path(@blog), :method => :get do
      %p
        = label_tag "你的回应"
      %p  
        = text_area_tag :comment, '', :size => "60x6" 
      %p
        = submit_tag '加上去'       