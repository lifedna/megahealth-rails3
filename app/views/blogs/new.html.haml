- @healthportal = "active"

/ Page
.site-center.center-page  
  .page-head{:style => "margin-bottom:30px;"}
    %h2 #{@phr.name}的健康
  .col.size1of4
    .sidebar.portlet
      .profile-card
        .img-wrapper
          %img{:src => "#{asset_path 'default-profile-lrg.jpg'}"}
        .cell
          %h4 #{@phr.name}  
        .cell{:style => "margin-top: 20px;"} 
          .col.sizefit.float-right
            %a{:href => "#{new_phr_path}" }
              %span.icon.icon-plus.color-blue
          .col.sizefill 
            %a
              %h5 #{link_to '添加家庭成员', new_phr_path}
        .cell
          .col.switch-record 
            .col.sizefit.float-right
              %span.icon.icon-chevron-down.color-blue
            .col.sizefill 
              %a
                %h5 切换家庭成员  
          .col.health-records.menu
            %ul.left.nav
              - current_user.phrs.excludes(:id => @phr.id).each do |phr|
                %li
                  = link_to phr.name, healthportal_path(:phr => p)
        
      .panel.margin-t30{:style => "background-color:#eee"}
        .cell.menu
          %ul.left.nav
            %li
              = link_to '健康档案', phr_path(@phr)
            %li
              %a 知识收藏
            %li
              = link_to '健康日记', blogs_path(:phr => @phr)   
   

  .col.sizefill
    .margin-l20
      %h3 写#{@phr.name}的健康日记
      %hr
      = simple_form_for @blog do |f|
        / = f.error_messages
        %p
          = f.hidden_field :phr_id, :value => @phr.id
        %p
          = f.input :category, label:'类别:', collection: ['健康知识', '就医指南', '治疗交流', '护理园地', '用药常识']
        %p
          = f.label '题目:'  
        %p
          = f.text_field :title
        %p
          = f.label '正文:'  
        %p
          = f.text_area :body, :size => "60x12", :class => "redactor"
        %p
          = f.label '主题:'  
          = f.hint '主题之间以空格分隔'
        %p
          = f.text_field :tags  
        %p
          = f.label '设置可见:' 
          = f.collection_radio_buttons :public, [[true, '对所有人可见'] ,[false, '仅对自己可见']], :first, :last  
        %p
          = f.label '权限设置:' 
          = f.input :locked, label:'不允许回应', as: :boolean
        %p   
          = f.submit "发表", :class => "background-blue"
          %a{:href => "#{blogs_path(:phr => @phr)}"}
            .button.background-gray 取消  