    %dd
      %ul.links
        - widget.polls.limit(5).each do |ap|
          %li #{link_to p.title, show_community_poll_path(p.community, p)} 
- when 'videos', 'video_lists'
  %dl.highlight.orange
    %dt 热点视频
    %dd
      %ul.links
        - widget.videos.limit(5).each do |v|
          %li #{link_to v.title, show_community_video_path(v.community, v)}      
- when 'questions', 'qas'
  %dl.highlight.orange
    %dt 热点问题
    %dd
      %ul.links
        - widget.questions.limit(5).each do |q|
          %li #{link_to q.title, show_community_question_path(q.community, q)}                

