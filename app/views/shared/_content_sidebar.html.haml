- case controller_name
- when 'articles', 'columns'
  %dl.highlight.orange
    %dt 热点文章
    %dd
      %ul.links
        - widget.articles.limit(5).each do |a|
          %li #{link_to a.title, show_community_article_path(a.community, a)} 
- when 'topics', 'forums'
  %dl.highlight.orange
    %dt 热点话题
    %dd
      %ul.links
        - widget.topics.limit(5).each do |t|
          %li #{link_to t.title, show_community_topic_path(t.community, t)} 
- when 'polls', 'poll_sets'
  %dl.highlight.orange
