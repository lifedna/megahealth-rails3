- present item, BlogPresenter do |presenter|
  %h4 #{presenter.title}   
  %p{:style => "color: #999;"} 
    %small #{presenter.metadata}
  - if presenter.image
    .col.sizefit.float-right
      #{presenter.image}
    .col.sizefill
      .margin-r10
        %p #{presenter.text} 
  - else
    %p #{presenter.text}  

  .tags
    标签： = render :partial => "tags", :locals => {:tags => item.model_tags}
  .source #{presenter.stats} 