- present item, ArticlePresenter do |presenter|
  %h4 #{presenter.title}          
  - if presenter.image
    .col.sizefit.float-right
      #{presenter.image}
    .col.sizefill
      %p{:style => "color: #999;"} 
        %small #{presenter.metadata}
      .margin-r20
        %p #{presenter.text} 
  - else
    %p{:style => "color: #999;"} 
      %small #{presenter.metadata}
    %p #{presenter.text}  

  - unless item.model_tags.empty?
    .tags 
      .col.sizefit
        标签:&nbsp;
      = render :partial => "tags", :locals => {:tags => item.model_tags}  
  .source #{presenter.stats} 
      